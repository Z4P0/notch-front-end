{
  "name": "notch",
  "version": "0.0.1",
  "description": "Front-end for notch",
  "main": "index.js",
  "scripts": {
    "html": "pug --pretty pug/*.pug --out html/",
    "html:watch": "pug --pretty --watch pug/*.pug --out html/",
    "css": "node-sass --output css/ scss/",
    "css:watch": "node-sass --watch --source-map true --output css/ scss/",
    "postcss": "postcss css/styles.css --no-map --use autoprefixer --use css-mqpacker --use cssnano --output css/styles.min.css",
    "regular-server": "http-server --silent -o",
    "live-reload": "live-server --quiet --port=4040 --open=html --watch=html/,css/",
    "servers": "npm run live-reload & npm run regular-server",
    "build": "npm run html && npm run css",
    "watch": "npm run html:watch & npm run css:watch"
  },
  "author": "Luis Rosario",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.3.1",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.7",
    "http-server": "^0.11.1",
    "live-server": "^1.2.0",
    "node-sass": "^4.10.0",
    "postcss-cli": "^6.0.1",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6"
  }
}
